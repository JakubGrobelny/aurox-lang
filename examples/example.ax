import
    IO
end

defop $ 1 right

define ($) f x :=
    f x
end

type Maybe a with
    case Just a
    case Nothing
end

define div a b : Int -> Int -> Maybe Int =
    if b = 0
        then Nothing
        else Just a/b
    end
end

define print_div_result a b : Int -> Int -> Unit =
    match div a b with
        case Nothing  => print "0"
        case Just val => print $ to_string val
    end
end
