define (+) a b : Int -> Int -> Int =
    __add (a, b)
end

define (-) a b : Int -> Int -> Int =
    __sub (a, b)
end

define (*) a b : Int -> Int -> Int =
    __mult (a, b)
end

define (/) a b : Int -> Int -> Maybe Int =
    if b == 0
        then Nothing
        else Just (__div (a, b))
    end
end

define (^) a b : Int -> Int -> Int =
    __pow (a, b)
end

define (-) a : Int -> Int =
    __neg a
end

